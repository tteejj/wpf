<Window x:Class="PraxisWpf.Features.DataProcessing.ExcelMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel Field Mapping Tool" 
        Height="600" Width="800" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- File Selection Section -->
        <GroupBox Grid.Row="0" Header="File Configuration" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                
                <!-- Source File -->
                <Label Grid.Row="0" Grid.Column="0" Content="Source File:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourceFilePath}" Margin="5,2" IsReadOnly="True"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Command="{Binding BrowseSourceFileCommand}" Margin="5,2" Width="70"/>
                <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding SourceSheets}" SelectedItem="{Binding SelectedSourceSheet}" Margin="5,2"/>
                
                <!-- Destination File -->
                <Label Grid.Row="1" Grid.Column="0" Content="Dest File:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DestinationFilePath}" Margin="5,2" IsReadOnly="True"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Command="{Binding BrowseDestinationFileCommand}" Margin="5,2" Width="70"/>
                <ComboBox Grid.Row="1" Grid.Column="3" ItemsSource="{Binding DestinationSheets}" SelectedItem="{Binding SelectedDestinationSheet}" Margin="5,2"/>
            </Grid>
        </GroupBox>
        
        <!-- Field Mappings Section -->
        <GroupBox Grid.Row="1" Header="Quick Actions" Margin="0,0,0,10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Select All T2020" Command="{Binding SelectAllT2020Command}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Clear All T2020" Command="{Binding ClearAllT2020Command}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Auto-Map A1:A41 â†’ B1:B41" Command="{Binding AutoMapSequentialCommand}" Margin="0,0,10,0" Padding="10,5"/>
            </StackPanel>
        </GroupBox>
        
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding FieldMappings}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="LightGray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Field Name" Binding="{Binding FieldName}" IsReadOnly="True" Width="200"/>
                <DataGridTextColumn Header="Source Cell" Binding="{Binding SourceCell}" Width="100"/>
                <DataGridTextColumn Header="Destination Cell" Binding="{Binding DestinationCell}" Width="120"/>
                <DataGridCheckBoxColumn Header="Use in T2020" Binding="{Binding UseInT2020}" Width="90"/>
                <DataGridTextColumn Header="Current Value" Binding="{Binding CurrentValue}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Execute Mapping" Command="{Binding ExecuteMappingCommand}" Margin="5" Padding="15,8" FontWeight="Bold"/>
            <Button Content="Export Text File" Command="{Binding ExportTextCommand}" Margin="5" Padding="15,8"/>
            <Button Content="Save Config" Command="{Binding SaveConfigCommand}" Margin="5" Padding="15,8"/>
            <Button Content="Load Config" Command="{Binding LoadConfigCommand}" Margin="5" Padding="15,8"/>
            <Button Content="Close" IsCancel="True" Click="CloseButton_Click" Margin="5" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>