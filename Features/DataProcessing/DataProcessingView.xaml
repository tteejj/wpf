<UserControl x:Class="PraxisWpf.Features.DataProcessing.DataProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PraxisWpf.Features.DataProcessing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Project Data Field Editor Template -->
        <DataTemplate x:Key="ProjectDataFieldTemplate">
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Field Label - FORCE VISIBLE -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding Key}" 
                           Foreground="#00ff00"
                           FontWeight="Bold"
                           FontSize="12"
                           FontFamily="Consolas"
                           Margin="5,5,15,5"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                
                <!-- Field Value TextBox - FORCE VISIBLE -->
                <TextBox Grid.Column="1"
                         Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                         Background="#000000"
                         Foreground="#00ffff"
                         BorderBrush="#00ff00"
                         BorderThickness="1"
                         FontWeight="Bold"
                         FontSize="11"
                         FontFamily="Consolas"
                         Margin="5"
                         Padding="8,4"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource CyberBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Controls - Removed all buttons per user request -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox ItemsSource="{Binding ProjectIds}"
                      SelectedItem="{Binding SelectedProjectId}"
                      Margin="0,0,10,0"
                      MinWidth="150"
                      IsEnabled="{Binding HasProjects}"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Margin="10,0,10,10">
            
            <!-- Project Data Tab -->
            <TabItem Header="Project Data">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Project Summary -->
                    <GroupBox Grid.Column="0" Header="Project Summary" 
                              Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedProject.SiteName, StringFormat='Site: {0}'}"
                                       Foreground="{DynamicResource CyberAccentBrush}"
                                       FontWeight="Bold"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding SelectedProject.SiteAddress, StringFormat='Address: {0}'}"
                                       Foreground="{DynamicResource CyberAccentBrush}"
                                       FontWeight="Bold"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding SelectedProject.RequestDate, StringFormat='Request Date: {0}'}"
                                       Foreground="{DynamicResource CyberAccentBrush}"
                                       FontWeight="Bold"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding SelectedProject.Status, StringFormat='Status: {0}'}"
                                       Foreground="{DynamicResource CyberAccentBrush}"
                                       FontWeight="Bold"
                                       Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Editable Fields -->
                    <GroupBox Grid.Column="1" Header="Project Details" 
                              Margin="5,0,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ProjectDataFields}"
                                          ItemTemplate="{StaticResource ProjectDataFieldTemplate}"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Excel Integration Tab -->
            <TabItem Header="Excel Integration">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Excel File Path -->
                    <GroupBox Grid.Row="0" Header="Excel Configuration" 
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding ExcelFilePath, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource CyberControlBrush}"
                                     Foreground="{DynamicResource CyberTextBrush}"
                                     BorderBrush="{DynamicResource CyberBorderBrush}"
                                     FontWeight="Bold"
                                     Margin="0,0,10,0"/>
                            
                            <!-- Browse button removed per user request -->
                        </Grid>
                    </GroupBox>
                    
                    <!-- Integration Log -->
                    <GroupBox Grid.Row="1" Header="Integration Log">
                        <TextBox Text="{Binding IntegrationLog, Mode=OneWay}"
                                 Background="{DynamicResource CyberControlBrush}"
                                 Foreground="{DynamicResource CyberTextBrush}"
                                 BorderBrush="{DynamicResource CyberBorderBrush}"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"/>
                    </GroupBox>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CyberAccentBrush}" 
                Height="25">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{DynamicResource CyberTextBrush}"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
        </Border>
    </Grid>
</UserControl>