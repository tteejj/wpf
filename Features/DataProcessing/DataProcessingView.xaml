<UserControl x:Class="PraxisWpf.Features.DataProcessing.DataProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PraxisWpf.Features.DataProcessing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Project Data Field Editor Template -->
        <DataTemplate x:Key="ProjectDataFieldTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding Key}" 
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,2,10,2"
                           VerticalAlignment="Center"/>
                
                <TextBox Grid.Column="1"
                         Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource InputBackgroundBrush}"
                         Foreground="{DynamicResource PrimaryTextBrush}"
                         BorderBrush="{DynamicResource AccentBrush}"
                         Margin="0,1"
                         Padding="5,2"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Import Excel File"
                    Command="{Binding ImportExcelCommand}"
                    Style="{DynamicResource CyberpunkButtonStyle}"
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            
            <Button Content="Sync Project Data" 
                    Command="{Binding SyncProjectDataCommand}"
                    Style="{DynamicResource CyberpunkButtonStyle}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    IsEnabled="{Binding HasSelectedProject}"/>
            
            <Button Content="Export Data"
                    Command="{Binding ExportDataCommand}"
                    Style="{DynamicResource CyberpunkButtonStyle}"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    IsEnabled="{Binding HasSelectedProject}"/>
            
            <ComboBox ItemsSource="{Binding ProjectIds}"
                      SelectedItem="{Binding SelectedProjectId}"
                      Style="{DynamicResource CyberpunkComboBoxStyle}"
                      Margin="0,0,10,0"
                      MinWidth="150"
                      IsEnabled="{Binding HasProjects}"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Margin="10,0,10,10">
            
            <!-- Project Data Tab -->
            <TabItem Header="Project Data" 
                     Style="{DynamicResource CyberpunkTabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Project Summary -->
                    <GroupBox Grid.Column="0" Header="Project Summary" 
                              Style="{DynamicResource CyberpunkGroupBoxStyle}"
                              Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedProject.SiteName, StringFormat='Site: {0}'}"
                                       Style="{DynamicResource CyberpunkTextStyle}"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding SelectedProject.SiteAddress, StringFormat='Address: {0}'}"
                                       Style="{DynamicResource CyberpunkTextStyle}"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding SelectedProject.RequestDate, StringFormat='Request Date: {0}'}"
                                       Style="{DynamicResource CyberpunkTextStyle}"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding SelectedProject.Status, StringFormat='Status: {0}'}"
                                       Style="{DynamicResource CyberpunkTextStyle}"
                                       Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Editable Fields -->
                    <GroupBox Grid.Column="1" Header="Project Details" 
                              Style="{DynamicResource CyberpunkGroupBoxStyle}"
                              Margin="5,0,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ProjectDataFields}"
                                          ItemTemplate="{StaticResource ProjectDataFieldTemplate}"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Excel Integration Tab -->
            <TabItem Header="Excel Integration" 
                     Style="{DynamicResource CyberpunkTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Excel File Path -->
                    <GroupBox Grid.Row="0" Header="Excel Configuration" 
                              Style="{DynamicResource CyberpunkGroupBoxStyle}"
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding ExcelFilePath, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource CyberpunkTextBoxStyle}"
                                     Margin="0,0,10,0"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Browse..."
                                    Command="{Binding BrowseExcelFileCommand}"
                                    Style="{DynamicResource CyberpunkButtonStyle}"
                                    Padding="10,5"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Integration Log -->
                    <GroupBox Grid.Row="1" Header="Integration Log" 
                              Style="{DynamicResource CyberpunkGroupBoxStyle}">
                        <TextBox Text="{Binding IntegrationLog, Mode=OneWay}"
                                 Style="{DynamicResource CyberpunkTextBoxStyle}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"/>
                    </GroupBox>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource AccentBrush}" 
                Height="25">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
        </Border>
    </Grid>
</UserControl>