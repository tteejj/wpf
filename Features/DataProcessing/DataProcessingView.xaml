<UserControl x:Class="PraxisWpf.Features.DataProcessing.DataProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PraxisWpf.Features.DataProcessing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Project Data Field Editor Template with Validation -->
        <DataTemplate x:Key="ProjectDataFieldTemplate">
            <Border Background="Black" Margin="3" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Field Label -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="{Binding Key}" 
                               Foreground="{DynamicResource CyberTextBrush}"
                               FontWeight="Bold" FontSize="14"
                               Margin="0,0,10,8"
                               VerticalAlignment="Top"/>
                    
                    <!-- Input Field with Error Styling -->
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8"
                             Padding="8"
                             TabIndex="{Binding TabIndex}"
                             IsTabStop="True">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding DataContext.SaveProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            <KeyBinding Key="F2" Command="{Binding DataContext.SaveProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </TextBox.InputBindings>
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="BorderBrush" Value="White"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasError}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource CyberErrorBrush}"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- Validation Error Message -->
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                               Text="{Binding ValidationError}"
                               Foreground="{DynamicResource CyberErrorBrush}"
                               FontWeight="Bold" FontSize="12"
                               FontStyle="Italic"
                               Margin="0,0,0,8"
                               Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource CyberBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Controls -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Project Selection -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Project:" 
                           Foreground="{DynamicResource CyberTextBrush}"
                           FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding ProjectIds}"
                          SelectedItem="{Binding SelectedProjectId}"
                          Margin="0,0,10,0"
                          MinWidth="200"
                          FontSize="14" FontWeight="Bold"
                          Foreground="{DynamicResource CyberTextBrush}"
                          Background="{DynamicResource CyberControlBrush}"
                          BorderBrush="{DynamicResource CyberBorderBrush}"
                          BorderThickness="2"
                          TabIndex="1"
                          IsTabStop="True"
                          IsEnabled="{Binding HasProjects}">
                    <ComboBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SaveProjectCommand}"/>
                    </ComboBox.InputBindings>
                </ComboBox>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Text="[N]ew" 
                           Foreground="{DynamicResource CyberTextBrush}"
                           FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
                <TextBlock Text="[S]ave" 
                           Foreground="{DynamicResource CyberTextBrush}"
                           FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
                <TextBlock Text="[D]elete" 
                           Foreground="{DynamicResource CyberErrorBrush}"
                           FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center" 
                           Margin="0,0,15,0"/>
                <TextBlock Text="[R]efresh" 
                           Foreground="{DynamicResource CyberTextBrush}"
                           FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Margin="10,0,10,10">
            
            <!-- Project Data Tab -->
            <TabItem Header="Project Data">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Project Summary -->
                    <GroupBox Grid.Column="0" Header="Project Summary" 
                              Margin="0,0,5,0">
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding SelectedProject.SiteName, StringFormat='Site: {0}'}"
                                       Style="{DynamicResource CyberBodyText}"/>
                            <TextBlock Text="{Binding SelectedProject.SiteAddress, StringFormat='Address: {0}'}"
                                       Style="{DynamicResource CyberBodyText}"/>
                            <TextBlock Text="{Binding SelectedProject.RequestDate, StringFormat='Request Date: {0}'}"
                                       Style="{DynamicResource CyberBodyText}"/>
                            <TextBlock Text="{Binding SelectedProject.Status, StringFormat='Status: {0}'}"
                                       Style="{DynamicResource CyberBodyText}"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Editable Fields -->
                    <GroupBox Grid.Column="1" Header="Project Details" 
                              Margin="5,0,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      TabIndex="2">
                            <ItemsControl ItemsSource="{Binding ProjectDataFields}"
                                          ItemTemplate="{StaticResource ProjectDataFieldTemplate}"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Excel Integration Tab -->
            <TabItem Header="Excel Integration">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Excel File Path -->
                    <GroupBox Grid.Row="0" Header="Excel Configuration" 
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding ExcelFilePath, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource CyberControlBrush}"
                                     Foreground="{DynamicResource CyberTextBrush}"
                                     BorderBrush="{DynamicResource CyberBorderBrush}"
                                     FontWeight="Bold"
                                     Margin="0,0,10,0"/>
                            
                            <!-- Browse button removed per user request -->
                        </Grid>
                    </GroupBox>
                    
                    <!-- Excel Operations -->
                    <GroupBox Grid.Row="1" Header="Excel Operations"
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="[I]mport Excel" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold" FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="[T]emplate" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold" FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="[E]xport Current" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold" FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="Export [A]ll" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold" FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="[M]apping Tool" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold" FontSize="16"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Text="Instructions:" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold" FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="Use Template to create Excel format, Import to load data, Export to save projects, Mapping Tool for advanced field mapping" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Normal" FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Integration Log -->
                    <GroupBox Grid.Row="2" Header="Integration Log">
                        <TextBox Text="{Binding IntegrationLog, Mode=OneWay}"
                                 Background="{DynamicResource CyberControlBrush}"
                                 Foreground="{DynamicResource CyberTextBrush}"
                                 BorderBrush="{DynamicResource CyberBorderBrush}"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"/>
                    </GroupBox>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CyberAccentBrush}" 
                Height="25">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{DynamicResource CyberTextBrush}"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
        </Border>
    </Grid>
</UserControl>