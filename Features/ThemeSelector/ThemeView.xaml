<UserControl x:Class="PraxisWpf.Features.ThemeSelector.ThemeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PraxisWpf.Features.ThemeSelector"
             Focusable="True" TabIndex="0">
    
    <UserControl.Resources>
        <!-- Theme Item Template -->
        <DataTemplate x:Key="ThemeItemTemplate">
            <Border BorderBrush="{DynamicResource CyberBorderBrush}" 
                    BorderThickness="1" 
                    Padding="10" 
                    Margin="5"
                    Background="{DynamicResource CyberControlBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Theme Name -->
                    <TextBlock Grid.Column="0" Grid.Row="0" 
                               Text="{Binding Name}" 
                               Foreground="{DynamicResource CyberTextBrush}"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,5"/>
                    
                    <!-- Active Indicator -->
                    <TextBlock Grid.Column="1" Grid.Row="0" 
                               Text="[ACTIVE]" 
                               Foreground="{DynamicResource CyberSelectionBrush}"
                               FontWeight="Bold"
                               Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="10,0,0,0"/>
                    
                    <!-- Theme Description -->
                    <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                               Text="{Binding Description}" 
                               Foreground="{DynamicResource CyberTextBrush}"
                               TextWrapping="Wrap"
                               FontSize="11"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource CyberControlBrush}" 
                BorderBrush="{DynamicResource CyberBorderBrush}" 
                BorderThickness="0,0,0,2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="╔═══ THEME SELECTOR ═══╗" 
                           Style="{DynamicResource CyberHeaderText}"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding CurrentThemeName, StringFormat='Current: {0}'}" 
                           Foreground="{DynamicResource CyberTextBrush}"
                           FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Theme Selection Area -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource CyberBorderBrush}" 
                BorderThickness="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Theme List -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" 
                              Margin="5">
                    <ItemsControl ItemsSource="{Binding AvailableThemes}"
                                  ItemTemplate="{StaticResource ThemeItemTemplate}"/>
                </ScrollViewer>
                
                <!-- Selection Panel -->
                <Border Grid.Column="1" 
                        BorderBrush="{DynamicResource CyberBorderBrush}" 
                        BorderThickness="1,0,0,0" 
                        Background="{DynamicResource CyberPanelBrush}"
                        Width="200" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="SELECTED THEME" 
                                   Foreground="{DynamicResource CyberTextBrush}"
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <!-- Selected Theme Info -->
                        <Border BorderBrush="{DynamicResource CyberBorderBrush}" 
                                BorderThickness="1" 
                                Padding="8" 
                                Margin="0,0,0,10"
                                Visibility="{Binding SelectedTheme, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedTheme.Name}" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="{Binding SelectedTheme.Description}" 
                                           Foreground="{DynamicResource CyberTextBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="10"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- No Selection Message -->
                        <TextBlock Text="No theme selected" 
                                   Foreground="{DynamicResource CyberTextBrush}" FontSize="14"
                                   FontStyle="Italic"
                                   Visibility="{Binding SelectedTheme, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Margin="0,0,0,10"/>
                        
                        <!-- Instructions -->
                        <TextBlock Text="INSTRUCTIONS" 
                                   Foreground="{DynamicResource CyberTextBrush}"
                                   FontWeight="Bold" 
                                   Margin="0,20,0,5"/>
                        
                        <TextBlock Foreground="{DynamicResource CyberTextBrush}" FontSize="14"
                                   TextWrapping="Wrap">
                            <Run Text="• Click a theme to select it"/>
                            <LineBreak/>
                            <Run Text="• Press A to apply selected theme"/>
                            <LineBreak/>
                            <Run Text="• Press R to refresh themes"/>
                            <LineBreak/>
                            <Run Text="• Press Escape to return to tasks"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CyberAccentBrush}" 
                Height="25">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="A: Apply Theme | R: Refresh | Esc: Back to Tasks" 
                           Foreground="{DynamicResource CyberTextBrush}"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>