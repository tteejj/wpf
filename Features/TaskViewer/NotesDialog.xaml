<Window x:Class="PraxisWpf.Features.TaskViewer.NotesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notes Editor"
        Width="900" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource CyberBackgroundBrush}"
        BorderBrush="{DynamicResource CyberBorderBrush}"
        BorderThickness="2"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="400">
    
    <Window.Resources>
        <!-- Button style for notes dialog -->
        <Style x:Key="NotesButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource CyberControlBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource CyberTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CyberBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CyberHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource CyberAccentBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CyberAccentBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource CyberBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CyberControlBrush}" 
                BorderBrush="{DynamicResource CyberBorderBrush}" 
                BorderThickness="0,0,0,2" 
                Padding="15,10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Name="TaskNameTextBlock" 
                               Text="Notes Editor"
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource CyberAccentBrush}"
                               FontFamily="Consolas, Courier New, monospace"/>
                    <TextBlock Name="FilePathTextBlock"
                               Text=""
                               FontSize="10"
                               Foreground="{DynamicResource CyberDimCyanBrush}"
                               FontFamily="Consolas, Courier New, monospace"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Modified: " 
                               Foreground="{DynamicResource CyberDimCyanBrush}"
                               FontFamily="Consolas, Courier New, monospace"
                               VerticalAlignment="Center"/>
                    <TextBlock Name="ModifiedIndicator" 
                               Text="No"
                               Foreground="{DynamicResource CyberInfoBrush}"
                               FontFamily="Consolas, Courier New, monospace"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Keyboard shortcuts info -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CyberPanelBrush}" 
                BorderBrush="{DynamicResource CyberBorderBrush}" 
                BorderThickness="1" 
                Padding="10,5"
                Margin="0,0,0,10">
            <TextBlock Text="Ctrl+S: Save | Ctrl+Z: Undo | Ctrl+Y: Redo | Ctrl+A: Select All | Esc: Close"
                       FontSize="10"
                       Foreground="{DynamicResource CyberDimCyanBrush}"
                       FontFamily="Consolas, Courier New, monospace"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Editor Area -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource CyberBorderBrush}" 
                BorderThickness="2"
                Background="{DynamicResource CyberControlBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          Background="{DynamicResource CyberControlBrush}">
                <TextBox Name="NotesTextBox"
                         Background="Transparent"
                         Foreground="{DynamicResource CyberTextBrush}"
                         FontFamily="Consolas, Courier New, monospace"
                         FontSize="12"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="NoWrap"
                         BorderThickness="0"
                         Padding="15"
                         UndoLimit="1000"
                         IsUndoEnabled="True"
                         SelectionBrush="{DynamicResource CyberSelectionBrush}"
                         CaretBrush="{DynamicResource CyberAccentBrush}"
                         TextChanged="NotesTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                      Background="Transparent"
                                                      Focusable="False" 
                                                      HorizontalScrollBarVisibility="Hidden" 
                                                      VerticalScrollBarVisibility="Hidden"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </ScrollViewer>
        </Border>
        
        <!-- Button Panel -->
        <Border Grid.Row="3" 
                Background="{DynamicResource CyberPanelBrush}" 
                BorderBrush="{DynamicResource CyberBorderBrush}" 
                BorderThickness="0,2,0,0" 
                Padding="10"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Lines: " 
                               Foreground="{DynamicResource CyberDimCyanBrush}"
                               FontFamily="Consolas, Courier New, monospace"/>
                    <TextBlock Name="LineCountTextBlock" 
                               Text="1"
                               Foreground="{DynamicResource CyberInfoBrush}"
                               FontFamily="Consolas, Courier New, monospace"
                               FontWeight="Bold"/>
                    <TextBlock Text=" | Characters: " 
                               Foreground="{DynamicResource CyberDimCyanBrush}"
                               FontFamily="Consolas, Courier New, monospace"
                               Margin="10,0,0,0"/>
                    <TextBlock Name="CharCountTextBlock" 
                               Text="0"
                               Foreground="{DynamicResource CyberInfoBrush}"
                               FontFamily="Consolas, Courier New, monospace"
                               FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="SaveButton" 
                            Content="Save (Ctrl+S)" 
                            Style="{StaticResource NotesButtonStyle}"
                            Click="SaveButton_Click"/>
                    <Button Name="SaveAndCloseButton" 
                            Content="Save &amp; Close" 
                            Style="{StaticResource NotesButtonStyle}"
                            Click="SaveAndCloseButton_Click"/>
                    <Button Name="CancelButton" 
                            Content="Cancel (Esc)" 
                            Style="{StaticResource NotesButtonStyle}"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>