<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- High Contrast Theme - Maximum contrast white on black -->
    <Color x:Key="ContrastBlack">#000000</Color>
    <Color x:Key="ContrastWhite">#ffffff</Color>
    <Color x:Key="ContrastGray">#808080</Color>
    <Color x:Key="ContrastDarkGray">#404040</Color>
    <Color x:Key="ContrastLightGray">#c0c0c0</Color>
    <Color x:Key="ContrastYellow">#ffff00</Color>
    <Color x:Key="ContrastRed">#ff0000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="CyberBackgroundBrush" Color="{StaticResource ContrastBlack}"/>
    <SolidColorBrush x:Key="CyberPanelBrush" Color="{StaticResource ContrastBlack}"/>
    <SolidColorBrush x:Key="CyberControlBrush" Color="{StaticResource ContrastBlack}"/>
    <SolidColorBrush x:Key="CyberHoverBrush" Color="{StaticResource ContrastDarkGray}"/>
    <SolidColorBrush x:Key="CyberTextBrush" Color="{StaticResource ContrastWhite}"/>
    <SolidColorBrush x:Key="CyberAccentBrush" Color="{StaticResource ContrastWhite}"/>
    <SolidColorBrush x:Key="CyberSelectionBrush" Color="{StaticResource ContrastYellow}"/>
    <SolidColorBrush x:Key="CyberWarningBrush" Color="{StaticResource ContrastYellow}"/>
    <SolidColorBrush x:Key="CyberErrorBrush" Color="{StaticResource ContrastRed}"/>
    <SolidColorBrush x:Key="CyberInfoBrush" Color="{StaticResource ContrastWhite}"/>
    <SolidColorBrush x:Key="CyberBorderBrush" Color="{StaticResource ContrastWhite}"/>
    <SolidColorBrush x:Key="CyberHighlightBrush" Color="{StaticResource ContrastGray}"/>
    <SolidColorBrush x:Key="CyberDimCyanBrush" Color="{StaticResource ContrastLightGray}"/>

    <!-- No Glow Effects for High Contrast -->
    <DropShadowEffect x:Key="CyberGlowEffect" 
                      Color="#ffffff" 
                      BlurRadius="0" 
                      ShadowDepth="0" 
                      Opacity="0"/>
    
    <DropShadowEffect x:Key="CyberSelectionGlow" 
                      Color="#ffff00" 
                      BlurRadius="0" 
                      ShadowDepth="0" 
                      Opacity="0"/>

    <DropShadowEffect x:Key="CyberTextGlow" 
                      Color="#ffffff" 
                      BlurRadius="0" 
                      ShadowDepth="0" 
                      Opacity="0"/>

    <!-- Window Style -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
    </Style>

    <!-- TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CyberControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="SelectionBrush" Value="{StaticResource CyberSelectionBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource CyberAccentBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberSelectionBrush}"/>
                <Setter Property="BorderThickness" Value="3"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CyberHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TreeView Style -->
    <Style TargetType="TreeView">
        <Setter Property="Background" Value="{StaticResource CyberPanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- TreeViewItem Style -->
    <Style TargetType="TreeViewItem">
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Margin" Value="0,1"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource CyberHighlightBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource CyberSelectionBrush}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CyberHoverBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource CyberAccentBrush}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected" Value="True"/>
                    <Condition Property="IsSelectionActive" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" Value="{StaticResource CyberControlBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource CyberDimCyanBrush}"/>
            </MultiTrigger>
        </Style.Triggers>
    </Style>

    <!-- StatusBar Style -->
    <Style TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource CyberControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,2,0,0"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- StatusBarItem Style -->
    <Style TargetType="StatusBarItem">
        <Setter Property="Foreground" Value="{StaticResource CyberAccentBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Grid Style -->
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
    </Style>

    <!-- UserControl Style -->
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Priority-specific colors -->
    <Style x:Key="HighPriorityText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberErrorBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="MediumPriorityText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberWarningBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="LowPriorityText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberInfoBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Header Text Style -->
    <Style x:Key="CyberHeaderText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource CyberAccentBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- ID Text Style (dimmed) -->
    <Style x:Key="CyberIdText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberDimCyanBrush}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- ComboBox Style -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberSelectionBrush}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberSelectionBrush}"/>
                <Setter Property="BorderThickness" Value="3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DatePicker Style -->
    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberSelectionBrush}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberSelectionBrush}"/>
                <Setter Property="BorderThickness" Value="3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ScrollViewer Style -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
    </Style>

    <!-- Border Style -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
    </Style>

    <!-- Button Style - Hidden/Invisible -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="0"/>
        <Setter Property="Height" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>

</ResourceDictionary>