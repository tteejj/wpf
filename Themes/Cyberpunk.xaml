<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Palette - Pure black backgrounds with bright cyan/green text -->
    <Color x:Key="CyberBlack">#000000</Color>
    <Color x:Key="CyberBrightCyan">#00ffff</Color>
    <Color x:Key="CyberBrightGreen">#00ff00</Color>
    <Color x:Key="CyberBrightMagenta">#ff00ff</Color>
    <Color x:Key="CyberBrightYellow">#ffff00</Color>
    <Color x:Key="CyberBrightOrange">#ff8000</Color>
    <Color x:Key="CyberBrightBlue">#4080ff</Color>
    <Color x:Key="CyberMidCyan">#00cccc</Color>
    <Color x:Key="CyberMidGreen">#00cc00</Color>
    <Color x:Key="CyberDarkCyan">#008888</Color>
    <Color x:Key="CyberDarkGreen">#006600</Color>
    <Color x:Key="CyberVeryDarkCyan">#004444</Color>

    <!-- Brushes - Everything uses pure black background with bright text -->
    <SolidColorBrush x:Key="CyberBackgroundBrush" Color="{StaticResource CyberBlack}"/>
    <SolidColorBrush x:Key="CyberPanelBrush" Color="{StaticResource CyberBlack}"/>
    <SolidColorBrush x:Key="CyberControlBrush" Color="{StaticResource CyberBlack}"/>
    <SolidColorBrush x:Key="CyberHoverBrush" Color="{StaticResource CyberVeryDarkCyan}"/>
    <SolidColorBrush x:Key="CyberTextBrush" Color="{StaticResource CyberBrightCyan}"/>
    <SolidColorBrush x:Key="CyberAccentBrush" Color="{StaticResource CyberBrightGreen}"/>
    <SolidColorBrush x:Key="CyberSelectionBrush" Color="{StaticResource CyberBrightMagenta}"/>
    <SolidColorBrush x:Key="CyberWarningBrush" Color="{StaticResource CyberBrightYellow}"/>
    <SolidColorBrush x:Key="CyberErrorBrush" Color="{StaticResource CyberBrightOrange}"/>
    <SolidColorBrush x:Key="CyberInfoBrush" Color="{StaticResource CyberBrightBlue}"/>
    <SolidColorBrush x:Key="CyberBorderBrush" Color="{StaticResource CyberMidCyan}"/>
    <SolidColorBrush x:Key="CyberHighlightBrush" Color="{StaticResource CyberDarkCyan}"/>
    <SolidColorBrush x:Key="CyberDimCyanBrush" Color="{StaticResource CyberMidCyan}"/>

    <!-- Glow Effects -->
    <DropShadowEffect x:Key="CyberGlowEffect" 
                      Color="{StaticResource CyberBrightCyan}" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.8"/>
    
    <DropShadowEffect x:Key="CyberSelectionGlow" 
                      Color="{StaticResource CyberBrightMagenta}" 
                      BlurRadius="6" 
                      ShadowDepth="0" 
                      Opacity="0.9"/>

    <DropShadowEffect x:Key="CyberTextGlow" 
                      Color="{StaticResource CyberBrightGreen}" 
                      BlurRadius="4" 
                      ShadowDepth="0" 
                      Opacity="0.6"/>

    <!-- Window Style -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Effect" Value="{StaticResource CyberGlowEffect}"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
    </Style>

    <!-- TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Effect" Value="{StaticResource CyberTextGlow}"/>
    </Style>

    <!-- TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CyberControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="SelectionBrush" Value="{StaticResource CyberSelectionBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource CyberAccentBrush}"/>
        <Setter Property="Effect" Value="{StaticResource CyberTextGlow}"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberAccentBrush}"/>
                <Setter Property="Effect" Value="{StaticResource CyberGlowEffect}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CyberHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TreeView Style -->
    <Style TargetType="TreeView">
        <Setter Property="Background" Value="{StaticResource CyberPanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Effect" Value="{StaticResource CyberGlowEffect}"/>
    </Style>

    <!-- TreeViewItem Style -->
    <Style TargetType="TreeViewItem">
        <Setter Property="Foreground" Value="#00ff00"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Margin" Value="0,1"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource CyberHighlightBrush}"/>
                <Setter Property="Foreground" Value="#00ff00"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CyberHoverBrush}"/>
                <Setter Property="Foreground" Value="#00ff00"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected" Value="True"/>
                    <Condition Property="IsSelectionActive" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" Value="{StaticResource CyberControlBrush}"/>
                <Setter Property="Foreground" Value="#00ff00"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </MultiTrigger>
        </Style.Triggers>
    </Style>

    <!-- StatusBar Style -->
    <Style TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource CyberControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Effect" Value="{StaticResource CyberTextGlow}"/>
    </Style>

    <!-- StatusBarItem Style -->
    <Style TargetType="StatusBarItem">
        <Setter Property="Foreground" Value="{StaticResource CyberAccentBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <!-- Grid Style -->
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
    </Style>

    <!-- UserControl Style -->
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Priority-specific colors -->
    <Style x:Key="HighPriorityText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberErrorBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="MediumPriorityText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberWarningBrush}"/>
    </Style>

    <Style x:Key="LowPriorityText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberInfoBrush}"/>
    </Style>

    <!-- Header Text Style -->
    <Style x:Key="CyberHeaderText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource CyberAccentBrush}"/>
        <Setter Property="Effect" Value="{StaticResource CyberGlowEffect}"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- ID Text Style (dimmed) -->
    <Style x:Key="CyberIdText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource CyberDimCyanBrush}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- ComboBox Style -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberAccentBrush}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberAccentBrush}"/>
                <Setter Property="Effect" Value="{StaticResource CyberGlowEffect}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DatePicker Style -->
    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberAccentBrush}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CyberAccentBrush}"/>
                <Setter Property="Effect" Value="{StaticResource CyberGlowEffect}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ScrollViewer Style -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource CyberTextBrush}"/>
    </Style>

    <!-- Border Style -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CyberBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CyberBorderBrush}"/>
    </Style>

    <!-- Button Style - Hidden/Invisible -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="0"/>
        <Setter Property="Height" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>

</ResourceDictionary>